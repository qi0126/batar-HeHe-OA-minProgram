.cardWrap{
  background: #fff;
  padding: 15rpx 14rpx 29rpx 24rpx;
  box-shadow:0px 1rpx 14rpx 0px rgba(0,22,48,0.05);
  border-radius:8rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  margin-bottom: 24rpx;
  font-weight:bold;
}

/* 上 */

.titleWrap{
  border-bottom:1rpx solid rgba(226,226,226,1);
  padding-bottom: 7rpx;
}

.title{
  display: flex;
  flex-wrap: wrap;
  font-size:28rpx;
  color:#242526;
  justify-content: space-between;
  align-items: center;
  padding-right: 20rpx;
  /* height:60rpx; */
  line-height: 60rpx;
}

.number{
  font-weight:bold;
  font-size:32rpx;
  color:#242526;
}

.status{
  font-size:30rpx;
  color:#AAADB3
}


/* 中 */
.middleWrap{
  padding: 36rpx 0rpx 32rpx 0rpx;
  border-bottom:1rpx solid rgba(226,226,226,1);
}

.middle{
  padding: 0rpx 19rpx 0rpx 12rpx;
  font-size:28rpx;
  color:rgba(51,51,51,1);
}

.tel{
  margin-top: 10rpx;
}

/* 底部 */
.bottomWrap{
   padding: 18rpx 19rpx 0rpx 12rpx;
}

.time{
  font-size:24rpx;
  color:rgba(153,153,153,1);
 
}


/* 按钮 */
.btnWrap{
  text-align: right;
}

.customBtn{
  width:129rpx;
  height:49rpx;
  background:rgba(225,103,29,1);
  border-radius:2rpx;
  font-size:26rpx;
  color:rgba(255,255,255,1);
  letter-spacing:1rpx;
  text-align: center;
  line-height: 49rpx;
  margin-top: 6rpx;
  display: inline-block;
}

/* 文字 */

.detailWrap{
  text-align: right;
}

.detailDes{
  font-size:26rpx;
  color:rgba(225,103,29,1);
  letter-spacing:1rpx;
  margin-top: 20rpx;
}

.rightArrow{
  font-size:24rpx;
}

.displayFlex{
  display:flex;
}
.left30{
  width:30%;
  color:#AAADB3;
  font-size:28rpx;
  height:87rpx;
  line-height:87rpx
}
.left50{
  width:50%;
}
.right70{
  width:70%;
  color:#242526;
  font-size:28rpx;
  height:87rpx;
  line-height:87rpx
}
.lineBottom{
  border-bottom:1rpx solid #E1E4E6;
  
}
.div28 {
  font-size: 28rpx;
  color:#AAADB3;
  line-height: 60rpx;
  /* font-weight:bold; */
}
.div28 span{
  color:#242526;
}
.divRedBottom{
  color:#9E0029;
  font-size:32rpx;
  text-align: right;
}

.borderRadius50{
  border-radius: 50;
}
.bRed{
  background: #BF1D47;
}

.hide{
 display: none;
}
.show{ 
 display: block;
}
