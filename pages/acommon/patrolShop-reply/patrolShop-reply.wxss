.replyWrap{
  font-family:PingFangSC-Medium,PingFang SC;
  background: #fff;
  padding: 33rpx 9rpx 110rpx 9rpx;
  box-shadow:0rpx 1rpx 14rpx 0rpx rgba(0,22,48,0.05);
  border-radius:8rpx;
}

.replyTitleWrap{
  font-size:30rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  letter-spacing:1rpx;
  border-bottom:1rpx solid rgba(224,224,224,1);
  padding-bottom: 21rpx;
}

.replyTitle{
  padding-left: 27rpx;
}

/* 内容 */
.replyDes{
  display: flex;
  padding: 22rpx 15rpx 110rpx 27rpx;
}

.replyLeft{
  flex-shrink:0;
  font-size:28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  letter-spacing:1rpx;
  margin-right: 40rpx;
}


.replyRight{
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:36rpx;
}

.replyNoData{
  font-size:28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  letter-spacing:1rpx;
  padding-top: 70rpx;
  padding-bottom: 100rpx;
  text-align: center;
}