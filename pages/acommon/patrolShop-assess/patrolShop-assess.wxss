
.colorYellow{
  color: #E1751D;
}
.assessModal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.6);
}

.assessCont{
  box-sizing: border-box;
  padding: 24rpx 25rpx 52rpx 25rpx;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  font-family:PingFangSC-Medium,PingFang SC;
}

.close{
  text-align: right;
}

.closeIcon{
  font-size:25rpx;
}

.assessTitleWrap{
  font-size:30rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  letter-spacing:1rpx;
  border-bottom:1rpx solid rgba(224,224,224,1);
  padding-bottom: 21rpx;
}

.assessTitle{
  padding-left: 17rpx;
}


/* 评价 */
.assessWrap{
  padding: 30rpx 0rpx 40rpx 0rpx;
  border-bottom:1rpx solid rgba(224,224,224,1);
}

.assess{
  margin-left: 27rpx;
}

.assessLi{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
 
}

.assessLi:last-child{
  margin-bottom: 0rpx;
}

.left{
  font-size:28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  letter-spacing:1px;
  flex: 1;
  display: flex;
  align-items: center;
}

.right{
  flex: 1;
  display: flex;
  justify-content: space-between;

}

.star{
  color: #BCBCC7;
  font-size: 40rpx;
}

.real{
  color: #E1751D;
}

/* 评价提示 */
.assessTips{
  width:603rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:30rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  margin-top: 40rpx;
}


/* 天数 */
.dayWrap{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 13rpx 0rpx 9rpx;
}

.dayLeft{
  display: flex;
  align-items: center;
  font-size:26rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:37rpx;
  letter-spacing:1rpx;
}

.dayRight{
  display: flex;
  align-items: center;
}

.dayBtn{
  display: flex;
  align-items: center;
  width:234rpx;
  height:64rpx;
  border:1rpx solid rgba(55,55,55,1);
  box-sizing: border-box;
}

.dayReduce{
  /* width: 80rpx; */
  height:64rpx;
  border-right:1rpx solid rgba(151,151,151,1);
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
}

.dayInput{
  height:64rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dayPlus{
  /* width: 80rpx; */
  height:64rpx;
  border-left:1px solid rgba(151,151,151,1);
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dayNum{
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  letter-spacing:1rpx;
  margin-left: 16rpx;
}


/* 其他建议 */

.otherWrap{
  font-family:PingFangSC-Regular,PingFang SC;
  display: flex;
  justify-content: space-between;
  padding: 34rpx 13rpx 0rpx 9rpx;
}

.adviseTitle{
  font-size:26rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  letter-spacing:1rpx;
  padding-top: 10rpx;
}

.advise{
  width:527rpx;
  height:194rpx;
  border:1rpx solid rgba(151,151,151,1);
  text-align: left;
  padding: 10rpx;
}

.wordNumber{
  padding-right: 13rpx;
  text-align: right;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-top: 10rpx;
}

/* 确认按钮 */

.assessConfirmWrap{
  display: flex;
  justify-content: center;
  margin: 48rpx 0rpx 0rpx 0rpx;
}

.assessConfirmBtn{
  width:673rpx;
  height:86rpx;
  background:rgba(225,117,29,1);
  font-size:26rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height:86rpx;

}


.l-evalbox{
  height: 100rpx;
  padding: 0 3%;
  margin-top: 10rpx;
  background: #FFF;
  line-height: 100rpx;
}
.l-evaltxt{
  width: 120rpx;
  display: block;
  font-size: 26rpx;
  color: #666666;
}
