<scroll-view scroll-y style='height:100vh;'>
  <view class='top'>
    <view>
       <view class='img'>
          <open-data type="userAvatarUrl"></open-data>
       </view>
       <view class='text'>{{userName}}</view>
       <!-- <view class='text'><open-data type="userNickName"></open-data></view> -->
       
    </view>
  </view>

  <navigator url="/pages/userInfo/userInfo" class='item'>
    
    <view class='left'>
      <image src='/images/myIconTwo.png'></image>
      账户信息
    </view>
    <view class='right'>
      <image src='/images/my_order.png'></image>
    </view>
  </navigator>
  <view bindtap="loginOut" class='item'>
    <view class='left'>
      <image src='/images/exitIcon.png'></image>
      退出登录
    </view>
    <view class='right'>
      <image src='/images/my_order.png'></image>
    </view>
  </view>
</scroll-view>