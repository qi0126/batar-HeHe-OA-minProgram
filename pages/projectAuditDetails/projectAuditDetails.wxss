}

/* 内容 */
.main{
  padding: 16rpx 15rpx 0rpx 11rpx;
  height:100%;
}
.bottomDiv{
  width:100%;
  height:100rpx;
  position: fixed;
  bottom:0rpx;
}
.bottomOne{
  width:320rpx;
  height:80rpx;
  line-height: 80rpx;
  position: fixed;
  bottom:40rpx;
  color:#BF1D47;
  left:32rpx;
  font-size:32rpx;
  border:3rpx solid #BF1D47;
}
.bottomTwo{
  width:320rpx;
  height:80rpx;
  line-height: 80rpx;
  position: fixed;
  bottom:40rpx;
