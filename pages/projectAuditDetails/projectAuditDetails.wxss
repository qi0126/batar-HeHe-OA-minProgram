/* 导航 */
.nav{
  display: flex;
  align-items: center;
  justify-items: center;
  height:97rpx;
  background:rgba(255,255,255,1);
  border-top:1rpx solid #F2F2F2;
  font-size:28rpx;
  font-weight:bold;
  padding:0 20px;
}


.navLi{
  flex: 1;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
}

.active{
  color: #E1671D;
}
.navOne{
  align-items: center;
  justify-items: center;
  background:rgba(255,255,255,1);
  border-top:1rpx solid #F2F2F2;
  font-size:28rpx;
  font-weight:bold;
  height:80rpx;
  line-height:80rpx;
  padding:0 10px;
}
.titleOne{
  font-size:28rpx;
  height:80rpx;
  line-height: 80rpx;
  padding:0 20rpx;
  font-weight:bold;
}
