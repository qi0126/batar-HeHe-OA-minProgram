  color:#fff;
  font-size:32rpx;
  background:#BF1D47;
  border:3rpx solid #BF1D47;
}


.txtHui {
    color: #8A9199
}


.weui-textarea{
  border: 1px solid #DADFE6;
  box-sizing: border-box;
  padding: 20rpx;
  width:100%;
  word-wrap: break-word;
}

.reason{
  padding: 0 20rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  word-wrap: break-word;
  font-weight:bold;
  color:rgba(255,42,77,1);
}

.contentDiv{
  position: relative;
  line-height: 40rpx;
  margin-top: 25rpx;
}
.contentDivOne{
  position: absolute;
  bottom:0;
  height:125rpx;
  background:linear-gradient(180deg,rgba(255,255,255,0.84) 0%,rgba(255,255,255,1) 100%);
  opacity:1;
  width:100%;
  text-align: center;
}
.contentDivOne view{
  position: absolute;
  width:100%;
  bottom:26rpx;
}